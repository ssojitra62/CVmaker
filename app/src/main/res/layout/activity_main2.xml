<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <!--    //qualification information bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|center"
                android:text="Qualification Information"
                android:textColor="#000D50"
                android:textSize="30dp" />
        </LinearLayout>

        <!--Qunafication in -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Degree In :"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/d_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="59dp" />
        </LinearLayout>


        <!--    university name    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/un_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="University Name:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/u_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp" />
        </LinearLayout>

        <!--master degree in -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ma_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masters In:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/m_degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp" />
        </LinearLayout>


        <!--collage name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/co_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="University Name:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/c_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp" />
        </LinearLayout>


        <!--        next butten bar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="265dp"
            android:gravity="center">

            <Button
                android:id="@+id/next2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NEXT" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>























































